@model Company.DomainModels.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayoutPage1.cshtml";
}


<h2>Product Details</h2> <a href="/manager/Products/edit/@Model.ProductID">Edit</a>
<table class="table">
    <tr>
        <th>Product ID</th>
        <td>@Model.ProductID</td>
    </tr>
    <tr>
        <th>Product Name</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price.Value.ToString("C")</td>
    </tr>
    <tr>
        <th>Date of Purchase</th>
        <td>@{if (@Model.DOP != null)
            {
                Model.DOP.Value.ToString("d/M/yyyy");
            } }</td>
    </tr>
    <tr>
        <th>Availability Status</th>
        <td>@Model.AvailabilityStatus</td>
    </tr>
    <tr>
        <th>Brand Name</th>
        <td>@Model.Brand.BrandName</td>
    </tr>
    <tr>
        <th>Active</th>
        <td>@Model.Active</td>
    </tr>
</table>

<a href="/manager/products/index">Back to Products</a>


