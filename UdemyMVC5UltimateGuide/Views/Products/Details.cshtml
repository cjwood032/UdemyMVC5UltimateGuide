@model UdemyMVC5UltimateGuide.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}


<h2>Product Details</h2> <a href="/Products/edit/@Model.ProductID">Edit</a>
<table class="table">
    <tr>
        <th>Product ID</th>
        <td>@Model.ProductID</td>
    </tr>
    <tr>
        <th>Product Name</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price.Value.ToString("C")</td>
    </tr>
    <tr>
        <th>Date of Purchase</th>
        <td>@{if (@Model.DateOfPurchase != null)
            {
                Model.DateOfPurchase.Value.ToString("d/M/yyyy");
            } }</td>
    </tr>
    <tr>
        <th>Availability Status</th>
        <td>@Model.AvailabilityStatus</td>
    </tr>
    <tr>
        <th>Brand ID</th>
        <td>@Model.BrandID</td>
    </tr>
    <tr>
        <th>Active</th>
        <td>@Model.Active</td>
    </tr>
</table>

<a href="/products/index">Back to Products</a>


