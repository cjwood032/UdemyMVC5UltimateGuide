@model List<UdemyMVC5UltimateGuide.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    
}

<h2>Products</h2>
<a href="@Url.Action("Create","Products")" >Create a Product</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Date of Purchase</th>
            <th>Availability</th>
            <th>CategoryID</th>

        </tr>
    </thead>
    <tbody>
        @{ foreach (var product in Model)
            {
                <tr>
                    <td><a href="/Products/Details/@product">@product.ProductID</a></td>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.DateOfPurchase</td>
                    <td>@product.AvailabilityStatus</td>
                    <td>@product.CategoryID</td>
                </tr>
            }
        }

    </tbody>
</table>

