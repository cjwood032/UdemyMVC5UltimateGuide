@model List<UdemyMVC5UltimateGuide.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    
}

<h2>Products</h2>
<form class="form-inline" action="/products/index">
    <label for="search" class="mr-1">Name:</label>
    <input type="search" class="form-control mr-1" id="search" name="search" placeholder="Search" value="@ViewBag.Search"/>
    <button type="submit" class="btn btn-primary">GO</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Date of Purchase</th>
            <th>Availability</th>
            <th>Category</th>

        </tr>
    </thead>
    <tbody>
        @{ foreach (var product in Model)
            {
                <tr>
                    <td><a href="/Products/Details/@product.ProductID">@product.ProductID</a></td>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.DateOfPurchase</td>
                    <td>@product.AvailabilityStatus</td>
                    <td>@product.Category.CategoryName</td>
                </tr>
            }
        }

    </tbody>
</table>

