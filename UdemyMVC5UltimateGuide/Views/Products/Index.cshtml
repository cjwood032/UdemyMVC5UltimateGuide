@model List<UdemyMVC5UltimateGuide.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    
}

<h2>Products</h2>
<a href="@Url.Action("Create","Products")" >Create a Product</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Rate</th>

        </tr>
    </thead>
    <tbody>
        @{ foreach (var product in Model)
            {
                <tr>
                    <td><a href="/Products/Details/@product.ProductId">@product.ProductId</a></td>
                    <td>@product.ProductName</td>
                    <td>@product.Rate</td>
                </tr>
            }
        }

    </tbody>
</table>

