@model List<UdemyMVC5UltimateGuide.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<h2>Categories</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            

        </tr>
    </thead>
    <tbody>
        @{ foreach (var category in Model)
            {
                <tr>
                    <td><a href="/Category/Details/@category.CategoryID">@category.CategoryID</a></td>
                    <td>@category.CategoryName</td>
                    
                </tr>
            }
        }

    </tbody>
</table>
