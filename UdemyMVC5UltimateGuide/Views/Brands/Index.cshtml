@model List<UdemyMVC5UltimateGuide.Models.Brand>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<h2>Brands</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>


        </tr>
    </thead>
    <tbody>
        @{ foreach (var brand in Model)
            {
                <tr>
                    <td><a href="/Brand/Details/@brand.BrandID">@brand.BrandID</a></td>
                    <td>@brand.BrandName</td>
                </tr>
            }
        }

    </tbody>
</table>
